# Environment Configuration
NODE_ENV=development

# Emapta API Configuration
EMAPTA_BASE_URL=https://your-emapta-domain.com/api
EMAPTA_TOKEN=your_token_here
EMAPTA_REFRESH_TOKEN=your_refresh_token_here

# Automation Settings
WORK_HOURS=9
AUTO_CLOCK_IN=true
AUTO_CLOCK_OUT=true
CHECK_INTERVAL_MINUTES=5

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/attendance.log

# Offline Mode Settings
OFFLINE_FALLBACK=true
OFFLINE_DATA_PATH=./data/offline.json